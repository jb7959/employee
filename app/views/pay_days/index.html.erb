<h1>Listing pay_days</h1>

<table>
  <thead>
    <tr>
      <th>Emp</th>
      <th>Name</th>
      <th>Payment type</th>
      <th>Pay</th>
      <th>Lastpayday</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pay_days.each do |pay_day| %>
      <tr>
        <td><%= pay_day.emp_id %></td>
        <td><%= pay_day.name %></td>
        <td><%= pay_day.payment_type %></td>
        <td><%= pay_day.pay %></td>
        <td><%= pay_day.lastPayday %></td>
        <td><%= link_to 'Show', pay_day %></td>
        <td><%= link_to 'Edit', edit_pay_day_path(pay_day) %></td>
        <td><%= link_to 'Destroy', pay_day, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

